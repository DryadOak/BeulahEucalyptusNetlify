<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="<%- headPageData.description %>" />
        <meta name="keywords" content="<%- headPageData.keywords %>" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%- headPageData.title %></title>

        <link rel="icon" type="image/x-icon" href="/images/logo-icons-avatars/favicon.ico">
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,700;1,400&display=swap">
        <link rel="stylesheet" media="print" onload="this.onload=null;this.removeAttribute('media');" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,700;1,400&display=swap">
        <noscript>
           <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,700;1,400&display=swap">
        </noscript>
        <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,700;1,400&display=swap" rel="stylesheet"/>
        <link rel="stylesheet" href="css/reset.css" />
        <link rel="stylesheet" href="css/style.css" />
        <!-- Conditional inclusion of slidder; home page-specific resources -->
        <% headPageData.hasSlider = typeof headPageData.hasSlider !== 'undefined' ? headPageData.hasSlider : false %>
        <% if (headPageData.hasSlider) { %><link rel="stylesheet" href="//unpkg.com/a11y-slider@latest/dist/a11y-slider.css"/>
        <script src="//unpkg.com/a11y-slider@latest/dist/a11y-slider.js"></script><% } %>
        <!-- Include reCAPTCHA script if the the page has a form -->
        <% headPageData.hasForm = typeof headPageData.hasForm !== 'undefined' ? headPageData.hasForm : false %>
        <% if (headPageData.hasForm) { %><script src="https://www.google.com/recaptcha/api.js" async defer> </script><% } %>
        <script src="js/main.js"></script>
    </head>
    <body>
<%- include('../partials/header') %>
        <main>
<%- body %>
        </main>
<%- include('../partials/footer') %>
    </body>
</html>
